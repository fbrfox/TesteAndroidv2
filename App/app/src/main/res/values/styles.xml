<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textSmallGray">
        <item name="android:textSize">16px</item>
        <item name="android:textColor">@color/smallText</item>
    </style>

    <style name="textTinyGray" parent="textSmallGray">
        <item name="android:textSize">12px</item>
    </style>

    <style name="textSmallDarkGray">
        <item name="android:textSize">16px</item>
        <item name="android:textColor">@color/mediumText</item>
    </style>

    <style name="textBigWhite">
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="textTinyWhite">
        <item name="android:textSize">12px</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>
